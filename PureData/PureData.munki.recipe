<?xml version="1.0" encoding="UTF-8"?>
    <!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
        <plist version="1.0">
            
            <dict>
                <key>Description</key>
                    <string>Downloads Pd-extended and imports into Munki.</string>
                <key>Input</key>
            
                <dict>
                    <key>IDENTIFIER</key>
                        <string>com.github.ntownsend.autopkg-recipes.PureDataExtended</string>
                    <key>MUNKI_REPO_SUBDIR</key>
                        <string>pd</string>
                    <key>NAME</key>
                        <string>Pd-extended.app</string>
                    <key>SOURCEFORGE_FILE_PATTERN</key>
                        <string>Pd-[0-9_\.]*-extended-macosx106-x86_64\.dmg</string>
                    <key>SOURCEFORGE_PROJECT_ID</key>
                        <string>55736</string>
                    <key>APP_DESTINATION</key>
                        <string>/Applications</string>
                    <key>pkginfo</key>
                    <dict>
                        <key>catalogs</key>
                            <array>
                                <string>testing</string>
                            </array>
                        <key>description</key>
                            <string>Pure Data (aka Pd) is an open source visual programming language.</string>
                        <key>name</key>
                            <string>%NAME%</string>
                        <key>unattended_install</key>
                            <true/>
                    </dict>
                </dict>
            
                <key>Process</key>
                    <array>
                        <dict>
                            <key>Processor</key>
                                <string>SourceForgeURLProvider</string>
                        </dict> 
                        <dict>
                            <key>Processor</key>
                                <string>URLDownloader</string>
                            <key>Arguments</key>
                            <dict>
                                <key>filename</key>
                                    <string>%NAME%.dmg</string>
                            </dict>
                        </dict>
                        <dict>
                            <key>Processor</key>
                                <string>EndOfCheckPhase</string>
                        </dict>
                        <dict>
                            <key>Arguments</key>
                                <dict>
                                    <key>pkg_path</key>
                                        <string>%pathname%</string>
                                    <key>repo_subdirectory</key>
                                        <string>%MUNKI_REPO_SUBDIR%</string>
                                    <key>additional_makepkginfo_options</key>
                                        <array>
                                            <string>--destinationpath</string>
                                            <string>%APP_DESTINATION%</string>
                                            <string>--itemname</string>
                                            <string>%NAME%</string>
                                        </array>
                                </dict>
                            <key>Processor</key>
                                <string>MunkiImporter</string>
                        </dict>
                    </array>
            </dict>
        </plist>


