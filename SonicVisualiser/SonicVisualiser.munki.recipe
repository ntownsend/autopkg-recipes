<?xml version="1.0" encoding="UTF-8"?>
    <!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
        <plist version="1.0">
            
            <dict>
                <key>Description</key>
                    <string>Downloads Sonic Visualiser and imports into Munki.</string>
                <key>Input</key>
            
                <dict>
                    <key>IDENTIFIER</key>
                        <string>com.github.ntownsend.autopkg-recipes.SonicVisualiser</string>
                    <key>MUNKI_REPO_SUBDIR</key>
                        <string>sonicvisualiser</string>
                    <key>NAME</key>
                        <string>Sonic Visualiser</string>
                    <key>SOURCEFORGE_FILE_PATTERN</key>
                        <string>Sonic Visualiser-[0-9_\.]*\.dmg</string>
                    <key>SOURCEFORGE_PROJECT_ID</key>
                        <string>162924</string>
                    <key>APP_DESTINATION</key>
                        <string>/Applications</string>
                    <key>pkginfo</key>
                    <dict>
                        <key>catalogs</key>
                            <array>
                                <string>testing</string>
                            </array>
                        <key>description</key>
                            <string>Sonic Visualiser is an application for inspecting and analysing the contents of music audio files. It combines powerful waveform and spectral visualisation tools with automated feature extraction plugins and annotation capabilities.</string>
                        <key>name</key>
                            <string>%NAME%</string>
                        <key>unattended_install</key>
                            <true/>
                    </dict>
                </dict>
            
                <key>Process</key>
                    <array>
                        <dict>
                            <key>Processor</key>
                                <string>SourceForgeURLProvider</string>
                        </dict> 
                        <dict>
                            <key>Processor</key>
                                <string>URLDownloader</string>
                            <key>Arguments</key>
                            <dict>
                                <key>filename</key>
                                    <string>%NAME%.dmg</string>
                            </dict>
                        </dict>
                        <dict>
                            <key>Processor</key>
                                <string>EndOfCheckPhase</string>
                        </dict>
                        <dict>
                            <key>Arguments</key>
                                <dict>
                                    <key>pkg_path</key>
                                        <string>%pathname%</string>
                                    <key>repo_subdirectory</key>
                                        <string>%MUNKI_REPO_SUBDIR%</string>
                                    <key>additional_makepkginfo_options</key>
                                        <array>
                                            <string>--destinationpath</string>
                                            <string>%APP_DESTINATION%</string>
<!--                                            <string>--itemname</string>
                                            <string>%NAME%</string>
-->
                                        </array>
                                </dict>
                            <key>Processor</key>
                                <string>MunkiImporter</string>
                        </dict>
                    </array>
            </dict>
        </plist>


